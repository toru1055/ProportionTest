<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/abc_background_cache_hint_selector_material_light"
                android:endColor="@color/abc_background_cache_hint_selector_material_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/abc_background_cache_hint_selector_material_light" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="@color/abc_background_cache_hint_selector_material_dark"
                android:endColor="@color/abc_background_cache_hint_selector_material_dark"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/abc_background_cache_hint_selector_material_dark" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:height="30dp"
                android:width="30dp" />
        </shape>
    </item>

</selector>